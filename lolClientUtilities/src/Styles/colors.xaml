<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="TextBlock" x:Key="TitleText">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#4E87D4"/>
        <Setter Property="FontFamily" Value="Trebuchet MS"/>
        <Setter Property="Margin" Value="0,10,10,10"/>
    </Style>


    <Style TargetType="Border" x:Key="Fondo">
        <Setter Property="BorderThickness" Value="10"/>
    </Style>
    <!--- #6D00A8-->
    <Color x:Key="Color1">#370066</Color>
    <Brush x:Key="Brush1">#370066</Brush>
    <Color x:Key="Color2">#2A004F</Color>
    <Brush x:Key="Brush2">#2A004F</Brush>
    <Color x:Key="C_Dorado">#c1af8c</Color>
    <Brush x:Key="B_Dorado">#c1af8c</Brush>
    <Color x:Key="Color4">#ffffff</Color>
</ResourceDictionary>