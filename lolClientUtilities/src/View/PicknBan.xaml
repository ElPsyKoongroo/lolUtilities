<Page x:Class="lolClientUtilities.View.PicknBan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:lolClientUtilities.ViewModel"
      xmlns:local="clr-namespace:lolClientUtilities.View"
      mc:Ignorable="d"
      Title="PicknBan">
    <Page.Resources>
        <vm:PicknBanViewModel x:Key="ViewModel"/>
    </Page.Resources>

    <Grid DataContext="{StaticResource ViewModel}"
          ClipToBounds="True"
          Background="Transparent"
          IsHitTestVisible="True">
            
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Column="0" Grid.Row="0" 
                 Text="Champion..."/>
        
        <ListView Grid.Column="0" Grid.Row="1" 
                  ItemsSource="{Binding Champs}">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding id}"/>
                        <TextBlock Text="->"/>
                        <TextBlock Text="{Binding name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </Grid>

</Page>
