<Window x:Class="lolClientUtilities.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:lolClientUtilities.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Name="Window"
        >
    <Window.Resources>
        <vm:MainWindowViewModel x:Key="ViewModel"/>
    </Window.Resources>

    <Border BorderThickness="5" 
            CornerRadius="10"
            UseLayoutRounding="True"
            ClipToBounds="True"
            BorderBrush="{StaticResource B_Dorado}"
            >

        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0.8,0.9">
                <GradientStop Color="{StaticResource Color1}" Offset="0.0" />
                <GradientStop Color="{StaticResource Color2}" Offset="1.0" />
                <!-- <GradientStop Color="#6040CF" Offset="0.8" />#AD00FF  #C344FB  #7000AD-->
            </LinearGradientBrush>
        </Border.Background>
        
        <StackPanel>
        
            <Border Height="40" Background="Transparent"
                       UseLayoutRounding="True"
                       CornerRadius="10, 10, 0, 0"
                       BorderThickness="0"
                       ClipToBounds="True"
                       MouseDown="MoverVentana">
                
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            UseLayoutRounding="True"
                            ClipToBounds="True">
                    
                    <Button Style="{StaticResource TopBarButton}"
                            Click="CloseButton_OnClick"
                            >
                        
                        <Image Source="../../resources/icons/x.png" 
                               Stretch="Uniform"
                        >
                          
                        </Image>    
                    
                            
                    </Button>
                    
                </StackPanel>
                
            </Border>
            
                <Line Stroke="{StaticResource B_Dorado}" StrokeThickness="3"
                      X1="0" X2="{Binding ElementName=Window, Path=Width}"
                      Y1="1" Y2="1"/>
            
            <Grid DataContext="{StaticResource ViewModel}"
                  ClipToBounds="True"
                  Background="Transparent"
                  IsHitTestVisible="True">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="1" Grid.Row="1"
                       Content="{Binding Text}" FontSize="30"/>
            </Grid>
        </StackPanel>
    </Border>

</Window>
